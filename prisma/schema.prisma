// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  incomeSources    IncomeSource[]
  expenseCategories ExpenseCategory[]
  monthlyBudgets   MonthlyBudget[]
  transactions     Transaction[]
  categorizationRules CategorizationRule[]
}

model IncomeSource {
  id        String   @id @default(cuid())
  userId    String
  name      String
  amount    Float
  type      String   // "salary", "bonus", "freelance", "other"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  categorizationRules CategorizationRule[]
}

model ExpenseCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String   // "fixed" | "variable"
  colorHex  String?  // Pastel color hex code
  createdAt DateTime @default(now())

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgetLineItems BudgetLineItem[]
  transactions    Transaction[]
  categorizationRules CategorizationRule[]
}

model MonthlyBudget {
  id                  String   @id @default(cuid())
  userId              String
  year                Int
  month               Int
  totalPlannedIncome  Float    @default(0)
  totalPlannedExpenses Float   @default(0)
  totalPlannedSavings Float    @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgetLineItems BudgetLineItem[]

  @@unique([userId, year, month])
}

model BudgetLineItem {
  id               String   @id @default(cuid())
  monthlyBudgetId  String
  expenseCategoryId String
  plannedAmount    Float

  monthlyBudget   MonthlyBudget  @relation(fields: [monthlyBudgetId], references: [id], onDelete: Cascade)
  expenseCategory ExpenseCategory @relation(fields: [expenseCategoryId], references: [id], onDelete: Cascade)

  @@unique([monthlyBudgetId, expenseCategoryId])
}

model Transaction {
  id               String   @id @default(cuid())
  userId           String
  date             DateTime
  description      String
  amount           Float
  type             String   // "income" | "expense"
  incomeSourceId   String?
  expenseCategoryId String?
  fingerprint      String?  // For deduplication
  accountName      String?
  accountNumber    String?
  institutionName  String?
  merchantName     String?  // Original merchant name from CSV

  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  incomeSource   IncomeSource?  @relation(fields: [incomeSourceId], references: [id], onDelete: SetNull)
  expenseCategory ExpenseCategory? @relation(fields: [expenseCategoryId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@unique([userId, fingerprint])
  @@index([userId, date])
  @@index([userId, type])
  @@index([userId, expenseCategoryId])
  @@index([expenseCategoryId])
}

model CategorizationRule {
  id             String   @id @default(cuid())
  userId         String
  pattern        String
  matchType      String   // "exact" | "contains"
  categoryId     String?  // For expenses
  incomeSourceId String?  // For income
  appliesTo      String   // "expense" | "income" | "both"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  category       ExpenseCategory? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  incomeSource   IncomeSource?   @relation(fields: [incomeSourceId], references: [id], onDelete: Cascade)

  @@index([userId, pattern])
  @@index([userId, appliesTo])
}

