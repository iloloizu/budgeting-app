// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  incomeSources    IncomeSource[]
  expenseCategories ExpenseCategory[]
  monthlyBudgets   MonthlyBudget[]
  transactions     Transaction[]
  categorizationRules CategorizationRule[]
  tellerEnrollments TellerEnrollment[]
  tellerAccounts   TellerAccount[]
  netWorthSnapshots NetWorthSnapshot[]
}

model IncomeSource {
  id        String   @id @default(cuid())
  userId    String
  name      String
  amount    Float
  type      String   // "salary", "bonus", "freelance", "other"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  categorizationRules CategorizationRule[]
}

model ExpenseCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String   // "fixed" | "variable"
  colorHex  String?  // Pastel color hex code
  createdAt DateTime @default(now())

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgetLineItems BudgetLineItem[]
  transactions    Transaction[]
  categorizationRules CategorizationRule[]
}

model MonthlyBudget {
  id                  String   @id @default(cuid())
  userId              String
  year                Int
  month               Int
  totalPlannedIncome  Float    @default(0)
  totalPlannedExpenses Float   @default(0)
  totalPlannedSavings Float    @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgetLineItems BudgetLineItem[]

  @@unique([userId, year, month])
}

model BudgetLineItem {
  id               String   @id @default(cuid())
  monthlyBudgetId  String
  expenseCategoryId String
  plannedAmount    Float

  monthlyBudget   MonthlyBudget  @relation(fields: [monthlyBudgetId], references: [id], onDelete: Cascade)
  expenseCategory ExpenseCategory @relation(fields: [expenseCategoryId], references: [id], onDelete: Cascade)

  @@unique([monthlyBudgetId, expenseCategoryId])
}

model Transaction {
  id               String   @id @default(cuid())
  userId           String
  date             DateTime
  description      String
  amount           Float
  type             String   // "income" | "expense"
  incomeSourceId   String?
  expenseCategoryId String?
  fingerprint      String?  // For deduplication
  accountName      String?
  accountNumber    String?
  institutionName  String?
  merchantName     String?  // Original merchant name from CSV

  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  incomeSource   IncomeSource?  @relation(fields: [incomeSourceId], references: [id], onDelete: SetNull)
  expenseCategory ExpenseCategory? @relation(fields: [expenseCategoryId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@unique([userId, fingerprint])
  @@index([userId, date])
  @@index([userId, type])
  @@index([userId, expenseCategoryId])
  @@index([userId, type, expenseCategoryId]) // Composite index for common filter pattern
  @@index([expenseCategoryId])
  @@index([date]) // For date-only queries
}

model CategorizationRule {
  id             String   @id @default(cuid())
  userId         String
  pattern        String
  matchType      String   // "exact" | "contains" | "regex"
  categoryId     String?  // For expenses
  incomeSourceId String?  // For income
  appliesTo      String   // "expense" | "income" | "both"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  category       ExpenseCategory? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  incomeSource   IncomeSource?   @relation(fields: [incomeSourceId], references: [id], onDelete: Cascade)

  @@index([userId, pattern])
  @@index([userId, appliesTo])
  @@index([userId, appliesTo, matchType]) // Composite index for categorization queries
}

model TellerEnrollment {
  id              String   @id @default(cuid())
  userId          String
  enrollmentId    String   // Teller's enrollment ID
  accessToken     String   // Encrypted access token from Teller Connect
  institutionId   String
  institutionName String
  status          String   // "active", "disconnected", etc.
  environment     String   @default("sandbox") // "sandbox", "development", "production"
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  accounts        TellerAccount[]

  @@unique([userId, enrollmentId])
  @@index([userId])
}

model TellerAccount {
  id              String   @id @default(cuid())
  userId          String
  enrollmentId    String   // Reference to TellerEnrollment
  tellerAccountId String   // Teller's account ID
  institutionId   String
  institutionName String
  name            String
  type            String   // "depository", "credit", "investment", etc.
  currency        String   @default("USD")
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  enrollment      TellerEnrollment        @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  accountBalances NetWorthAccountBalance[]

  @@unique([userId, tellerAccountId])
  @@index([userId])
  @@index([enrollmentId])
}

model NetWorthSnapshot {
  id              String   @id @default(cuid())
  userId          String
  year            Int
  month           Int
  totalAssets     Float    @default(0)
  totalLiabilities Float   @default(0)
  netWorth        Float    @default(0)
  snapshotDate    DateTime @default(now())
  createdAt       DateTime @default(now())

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  accountBalances NetWorthAccountBalance[]

  @@unique([userId, year, month])
  @@index([userId, year, month])
  @@index([userId, snapshotDate])
}

model NetWorthAccountBalance {
  id                String   @id @default(cuid())
  snapshotId        String
  tellerAccountId   String?
  accountName       String
  institutionName   String
  accountType       String   // "depository", "credit", "investment", etc.
  balance           Float
  isAsset           Boolean  // true for assets, false for liabilities

  snapshot          NetWorthSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
  tellerAccount     TellerAccount?   @relation(fields: [tellerAccountId], references: [id], onDelete: SetNull)

  @@index([snapshotId])
}

